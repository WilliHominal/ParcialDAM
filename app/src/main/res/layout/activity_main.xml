<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DATOS PERSONA"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginVertical="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:layout_marginStart="5dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/nombre_persona_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint= "Ingrese el nombre..."
            android:layout_marginHorizontal="5dp"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GÃ©nero:"
            android:layout_marginStart="5dp"
            android:textSize="20sp"/>

        <RadioGroup
            android:id="@+id/genero_RG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masculino"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Femenino"
                android:layout_marginHorizontal="15dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Otro"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/listar_personas_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LISTADO PERSONAS"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"/>
        <Button
            android:id="@+id/guardar_persona_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GUARDAR DATOS"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listado_LV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>